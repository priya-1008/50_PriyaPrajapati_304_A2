<!DOCTYPE html>
<html>
<head>
  <title>Employee List</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h2>Employee List</h2>
    <div class="top-links">
      <a href="/employees/create">+ Add Employee</a>
      <a href="/logout">Logout</a>
    </div>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(emp => { %>
          <tr>
            <td><%= emp.empId %></td>
            <td><%= emp.name %></td>
            <td><%= emp.email %></td>
            <td>â‚¹<%= emp.grossSalary %></td>
            <td class="actions">
              <a href="/employees/edit/<%= emp._id %>" class="edit">Edit</a>
              <a href="/employees/delete/<%= emp._id %>" class="delete">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>